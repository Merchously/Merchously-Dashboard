# ============================================
# Merchously Dashboard - Environment Configuration
# ============================================
# Copy this file to .env.local for development
# Copy to .env.production for production deployment on Hostinger

# --------------------------------------------
# Application Settings
# --------------------------------------------
NODE_ENV=production
NEXT_PUBLIC_API_URL=https://dashboard.merchously.com
PORT=3000
HOSTNAME=0.0.0.0

# --------------------------------------------
# Authentication
# --------------------------------------------
# Single password for admin access (change this in production!)
DASHBOARD_PASSWORD=your-secure-password-here

# JWT secret for session tokens (generate random 32+ character string)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=generate-random-32-character-secret-key

# --------------------------------------------
# n8n Integration
# --------------------------------------------
# Base URL of your n8n instance
N8N_API_URL=https://agents.merchously.com

# Shared secret for webhook validation (optional but recommended)
# Must match the secret sent by n8n workflows in X-Webhook-Secret header
N8N_WEBHOOK_SECRET=shared-secret-for-webhook-validation

# --------------------------------------------
# Airtable Integration
# --------------------------------------------
# Personal Access Token from https://airtable.com/create/tokens
AIRTABLE_API_KEY=patXXXXXXXXXXXXXXX

# Base ID (found in Airtable API docs for your base)
AIRTABLE_BASE_ID=appwE9eU3t3vk6jLS

# Table ID (found in Airtable API docs)
AIRTABLE_TABLE_ID=tbljcOBPFzyO5rCT4

# --------------------------------------------
# Database
# --------------------------------------------
# Path to SQLite database file (relative to project root)
DATABASE_PATH=./db/merchously.db

# --------------------------------------------
# Server-Sent Events (SSE)
# --------------------------------------------
# Heartbeat interval in milliseconds (keeps connections alive)
SSE_HEARTBEAT_INTERVAL=30000
